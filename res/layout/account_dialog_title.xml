<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 主标题 -->
    <TextView
        android:id="@+id/account_dialog_title"
        style="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginTop="-2.7dip"
        android:layout_marginBottom="-2.7dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <!-- 副标题 -->
    <TextView
        android:id="@+id/account_dialog_subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="1dip"
        android:gravity="center"/>
     <!-- 增加功能：三级标题 -->
    <TextView
        android:id="@+id/account_dialog_subsubtitle"//分配ID
        android:layout_width="fill_parent"//宽度
        android:layout_height="wrap_content"//高度
        android:layout_marginTop="5dip"//顶部距离
        android:layout_marginBottom="1dip"//底部距离
        android:gravity="center"/>//文本内容居中

</LinearLayout>